# DuetMind Adaptive MLOps Environment Configuration
# Copy this file to .env and update with your actual values

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=duetmind_mlops
DB_USER=duetmind
DB_PASSWORD=duetmind_secret
DB_SCHEMA=public

# MLflow Configuration
MLFLOW_TRACKING_URI=postgresql://duetmind:duetmind_secret@localhost:5432/duetmind_mlops
MLFLOW_DEFAULT_ARTIFACT_ROOT=s3://mlflow-artifacts
MLFLOW_S3_ENDPOINT_URL=http://localhost:9000

# MinIO/S3 Configuration
AWS_ACCESS_KEY_ID=duetmind
AWS_SECRET_ACCESS_KEY=duetmind_secret_key
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=duetmind
MINIO_SECRET_KEY=duetmind_secret_key

# DVC Remote Configuration
DVC_REMOTE_URL=s3://duetmind-data
DVC_REMOTE_ENDPOINT_URL=http://localhost:9000

# Vector Database Configuration (for agent memory)
VECTOR_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
VECTOR_DIMENSION=384

# Security Configuration
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=duetmind_mlops.log

# Development vs Production
ENVIRONMENT=development
DEBUG=true

# Drift Detection
DRIFT_MONITORING_ENABLED=true
DRIFT_THRESHOLD=0.1
DRIFT_WINDOW_DAYS=7

# Model Registry
MODEL_REGISTRY_ENABLED=true
AUTO_MODEL_PROMOTION=false