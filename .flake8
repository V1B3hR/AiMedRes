[flake8]
max-line-length = 100
extend-ignore = E203, E266, E501, W503
exclude =
    .git,
    __pycache__,
    build,
    dist,
    venv,
    env,
    .venv,
    .eggs,
    *.egg-info,
    frontend,
    node_modules,
    migrations,
    .pytest_cache,
    .mypy_cache,
    htmlcov,
    outputs,
    test_outputs,
    cache,
    data,
    results,
    logs,
    experiments,
    mlruns,
    summaries,
    *_outputs,
    *_results,
    debug
per-file-ignores =
    __init__.py:F401,F403
    tests/*:F401,F403,F811
max-complexity = 15
